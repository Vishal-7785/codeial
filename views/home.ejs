<link rel="stylesheet" href="/css/home.css">
       
        <h1 id="heading"> 
            Hey!! Welcome to Codeial.. We hope you are safe :)
           
        </h1>
   <section id="feed-posts">
       <% if(locals.user){%>

       
       <form action="/posts/create" id="new-post-form" method="POST">

        <textarea name="content" id="" cols="30" rows="3" placeholder="Type text here" required></textarea>
        <input type="submit" value="POST">
       </form>
   </section>
   <%}%>
   <div id = "posts-list-container">
    <h2 id="Posts-heading">Here are posts of users :)</h2>
       <ul>
           <% for(post of posts){%>
            <li> 
                <p>
                <%= post.content %> 
                    <br>
                    <small>
                       
                        <%= post.user.name %>
                        
                    </small>
                    </p>
                    <div>
                    <% if(locals.user){%>
                        
                        <form action="/comments/create" method="POST">
                        <input type="text" namee="content" placeholder="Add a comment..." required> 
                        <input type="hidden" name="post" value = "<%=post._id %>">
                        <input type="submit" value = "Add Comment">
                    </form>
                        <%}%> 
                    </div>
            </li>
           <% }
           %>

       </ul>
   </div>